<!DOCTYPE html>
<html class="{{htmlclass}}">
  <head>
    {{#block "head"}}
      <meta charset="utf-8">
      <meta name="viewport" content="width=device-width, initial-scale=1">
      {{#if title}}
        <title>{{title}}</title>
      {{else if name}}
        <title>{{name}}</title>
      {{else}}
        <title>{{title}}</title>
      {{/if}}
      {{#each styles}}
        <link rel="stylesheet" href="{{@root.baseurl}}/assets/toolkit/styles/{{this}}.css">
      {{/each}}
    {{/block}}
    <link rel="stylesheet" href="{{@root.baseurl}}/assets/toolkit/styles/toolkit.css">
    <link href='http://fonts.googleapis.com/css?family=Playfair+Display:400,700,400italic,700italic|Playfair+Display+SC:400,700,400italic,700italic|Open+Sans:400italic,700italic,400,300,700' rel='stylesheet' type='text/css'>
    <link rel="stylesheet" href="http://fonts.googleapis.com/css?family=Source+Sans+Pro:400,600,700,400italic|Source+Code+Pro">
  </head>
  <body class="{{bodyclass}}">
    {{#block "body"}}
      {{{embed "patterns.combos.masthead.base"}}}
      {{#block "main"}}

      {{/block}}
    {{/block}}
    {{#block "foot"}}
      {{{embed "patterns.combos.footer.base"}}}
    {{/block}}
  </body>
</html>
